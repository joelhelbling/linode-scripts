#!/bin/bash

LABEL=linode_initial_setup
DISTRIBUTION="Ubuntu 16.04 LTS"
CODE_FILE=./stackscripts/$LABEL
DESCRIPTION="Initial setup (as per http://goo.gl/0GLSrd)"
REVISION_NOTE="Initial revision"

linode stackscript create \
  --label $LABEL \
  --distribution "$DISTRIBUTION" \
  --codefile "$CODE_FILE" \
  --ispublic false \
  --description "$DESCRIPTION" \
  --revnote "$REVISION_NOTE"
