#!/bin/bash

LABEL=linode_initial_setup
DISTRIBUTION="Ubuntu 16.04 LTS"
CODE_FILE=./stackscripts/$LABEL.sh
DESCRIPTION="Initial setup (as per http://goo.gl/0GLSrd)"
REVISION_NOTE="Revised and uploaded"

if [ ! -z "$1" ]; then
  REVISION_NOTE="$1"
fi

linode stackscript update \
  --label $LABEL \
  --distribution "$DISTRIBUTION" \
  --codefile "$CODE_FILE" \
  --ispublic false \
  --description "$DESCRIPTION" \
  --revnote "$REVISION_NOTE"

